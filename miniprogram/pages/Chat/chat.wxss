.container {
  padding-top: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #007AFF;
}

.message-wrapper {
  width: 100%;
  height: auto;
  border: 1px solid #ccc;
  padding-left: 10px;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.message-avatar {
  height: 30px;
  width: 30px;
  border-radius: 50%;
  margin-right: 6px;
}

.message-content-wrapper {
  display: flex;
  flex-direction: column;
  border: 1px solid #ccc;
}

.message-content-nickname {
  font-size: 10px;
  font: bold;
  border: 1px solid #ccc;
}

.message-content-text {
  font-size: 18px;
  font: bold;
  border: 1px solid #ccc;
}

.message-wrapper-reverse {
  display: flex;
  border: 1px solid #ccc;
  flex-direction: row-reverse;
  width: 100%;
  height: auto;
  border: 1px solid #ccc;
  padding-right: 10px;
  align-items: center;
  margin-bottom: 20px;
}
.message-avatar-reverse{
  height: 30px;
  width: 30px;
  border-radius: 50%;
  margin-right: 6px;
  margin-left: 10px;
}

.input-container {
  display: flex;
  align-items: center;
  left: 10px;
  bottom: 20px;
  position: fixed;
}

.input {
  flex: 1;
  height: 30px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  outline: none;
  margin-right: 10px;
}

.send-button {
  width: 60px;
  height: 30px;
  background-color: #007AFF;
  color: #fff;
  border-radius: 5px;
  border: none;
  outline: none;
  flex:0.2;
  display: flex;
  justify-content: center;
  align-items: center;
}
