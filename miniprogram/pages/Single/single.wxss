
.container {
  padding-top: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #007AFF;
}
.messages {
 flex:1;
 width: 100%;
padding-left: 10px;
}

.input-container {
  display: flex;
  align-items: center;
  left: 10px;
  bottom: 20px;
  position: fixed;
}

.input {
  flex: 1;
  height: 30px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  outline: none;
  margin-right: 10px;
}

.send-button {
  width: 60px;
  height: 30px;
  background-color: #007AFF;
  color: #fff;
  border-radius: 5px;
  border: none;
  outline: none;
  flex:0.2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.message-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 10px;
}
.sender {
  font-weight: bold;
  font-size: 6px;

}

.text {
  margin-top: 5px;
  border:1px solid #ccc;
}