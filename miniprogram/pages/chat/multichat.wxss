/* pages/chat/multichat.wxss */

.chat-record-container {
  background: #FFFFFF;
  border-radius: 0rpx 0rpx 0rpx 0rpx;
}

.navigator-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 108rpx;
}

.aq {
  display: block;
  /* 修改为block */
  width: 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
}

.navigtor-bar-png {
  height: 40rpx;
  width: 40rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
}

/* 群聊时间信息 */
.chat-wrapper {
  margin-top: 38rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chat-createtime {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12rpx 12rpx;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  background: #E8EAEF;
  opacity: 0.5;
  width: fit-content;
  height: 21rpx;
}

.chat-createinfo {
  margin-top: 22rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #8E9AB0;
  line-height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFang SC-Regular, PingFang SC;
}

/* 聊天信息展示框 */
.chat-record-wrapper {
  margin-top: 20rpx;
  height: 244rpx;
  width: 100%;
  background-color: E9AB0;
  border-radius: 0rpx 0rpx 0rpx 0rpx;
  opacity: 0.13;
  display: flex;
  flex-direction: row;
}

.chat-record-wrapper-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 10rpx;
}

.chat-record-time {
  font-family: PingFang SC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  color: #8E9AB0;
  line-height: 34rpx;
}

.chat-record-info {
  font-size: 34rpx;
  width: 70%;
  height: 100rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #0C1C33;
  line-height: 52rpx;
  background: #0089FF;
  padding: 20rpx;
  border-radius: 12rpx 0rpx 12rpx 12rpx;
  opacity: 0.8;
}

.chat-record-message {
  font-size: 24rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #8E9AB0;
  line-height: 34rpx;
  height: 34rpx;
}

/* 头像 */
.chat-record-useravatar-container {
  width: 100%;
  height: 100%;
  flex: 0.1;
}

.chat-record-useravatar {
  margin: 10rpx;
  height: 88rpx;
  width: 88rpx;
  flex: 0.1;
}

/* 底部聊天区 */
.type-message-container {
  height: 112rpx;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  opacity: 1;
  background: #F0F2F6;
  border-radius: 0rpx 0rpx 0rpx 0rpx;
  opacity: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.input-container {
  background-color: white;
  height: 60rpx;
  padding: 0rpx 10rpx;
  width: 400rpx;
}

.tool-bar-png {
  height: 40rpx;
  width: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}