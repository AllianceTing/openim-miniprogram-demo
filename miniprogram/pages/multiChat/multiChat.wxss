.chat-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.chat-container-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 34rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
}

.chat-container-top-title {
  font-weight: 600;
  color: #0C1C33;
  transform: translateX(24rpx);
}

.chat-container-top-icon {
  height: 40rpx;
  width: 40rpx;
  transform: translateX(20rpx);
  margin-right: 15rpx;
}
.chat-container-top-rgt{
  display: flex;
}
.body-wraper{
  margin-right: 10rpx;
}
.chat-container-body-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.chat-message-time {
  width: 89rpx;
  height: 42rpx;
  background: #E8EAEF;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
  opacity: 0.5;
  margin-top: 20rpx;
}

/* message */
.chat-message-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 40rpx;
}

.chat-message-container-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 10rpx;
  width: 100%;
  height: 5rem;
}

.message-verbose {
  width: 48rpx;
  height: 17rpx;
  font-size: 12rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #8E9AB0;
  line-height: 17rpx;
}

.chat-message-user-avatar {
  height: 3rem;
  width: 3rem;
  margin-right: 10rpx;
}

.chat-message-time {
  background: #E8EAEF;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
  display: flex;
  font-size: 12rpx;
  justify-content: center;
  width: 89rpx;
  height: 21rpx;
  opacity: 0.5;
}

.chat-message-title {
  margin-top: 20rpx;
  height: 17rpx;
  font-size: 12rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #8E9AB0;
  line-height: 17rpx;
  background-clip: text;
  max-width: 20%;
}

.chat-time {
  display: flex;
  flex-direction: row;
  height: 17rpx;
  font-size: 16rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  margin-bottom: 10rpx;
  color: #8E9AB0;
}

.chat-time-usr {
  margin-left: 10rpx;
}
.message-box {
  min-height: 0.2rem;
  max-width: 45%;
  padding: 12rpx 12rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(12, 28, 51, 1);
  line-height: 26rpx;
  font-size: 26rpx;
  margin-top: 5rpx;
  background: #0089FF;
  border-radius: 6rpx 0rpx 6rpx 6rpx;
  opacity: 0.2;
  word-wrap: normal;
}

/*tab-bar */
.tab-bar {
  width: 375rpx;
  height: 120rpx;
  border-radius: 0rpx 0rpx 0rpx 0rpx;
  opacity: 1;
  bottom: 0rpx;
  width: 100%;
  background: #F0F2F6;
  align-items: center;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border: 1px solid #ccc;
}

.input-box {
  height: 60rpx;
  width: 400rpx;
  background-color: #fffefe;
  border-radius: 20rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.tab-bar-avatar {
  width: 48rpx;
  height: 48rpx;
}
.tar-bar-rgt{
  display: flex;
  align-items: center;
}
.tab-bar-avatar-ico{
  width: 48rpx;
  height: 48rpx;
  margin-right: 28rpx;
}
.chat-message-container-wrapper-reverse {
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  width: 100%;
  height: 5rem;
  margin-top: 20rpx;
}

.chat-reverse{
  display: flex;
  flex-direction: column;
}

.tab-bar{
  display: flex;
  justify-content: space-around;
  border: 1px solid #ccc;
  align-items: center;
}

